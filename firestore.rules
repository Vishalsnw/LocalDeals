
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Cities collection (optional if you use this)
    match /cities/{cityId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.resource.data.keys().hasAll(['name', 'state', 'isCustom']) &&
        request.resource.data.createdBy == request.auth.uid;
      allow update, delete: if request.auth != null && 
        resource.data.createdBy == request.auth.uid;
    }

    // Businesses collection
    match /businesses/{businessId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null && 
        resource.data.ownerId == request.auth.uid;
    }

    // Offers collection
    match /offers/{offerId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null &&
        request.auth.uid == get(/databases/$(database)/documents/businesses/$(request.resource.data.businessId)).data.ownerId;
      allow update, delete: if request.auth != null &&
        request.auth.uid == get(/databases/$(database)/documents/businesses/$(resource.data.businessId)).data.ownerId;
    }

    // Categories collection
    match /categories/{categoryId} {
      allow read: if request.auth != null;
    }
  }
}


rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Cities collection - read for all authenticated users, write for authenticated users
    match /cities/{cityId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.resource.data.keys().hasAll(['name', 'state', 'isCustom']) &&
        request.resource.data.createdBy == request.auth.uid;
      allow update, delete: if request.auth != null && 
        resource.data.createdBy == request.auth.uid;
    }
    
    // Businesses collection - owners can create/update their own businesses
    match /businesses/{businessId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null && 
        resource.data.ownerId == request.auth.uid;
    }
    
    // Offers collection - business owners can manage their offers, users can read
    match /offers/{offerId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/businesses/$(request.resource.data.businessId)).data.ownerId;
      allow update, delete: if request.auth != null && 
        request.auth.uid == get(/databases/$(database)/documents/businesses/$(resource.data.businessId)).data.ownerId;
    }
    
    // Categories collection - read only for all authenticated users
    match /categories/{categoryId} {
      allow read: if request.auth != null;
    }
  }
}

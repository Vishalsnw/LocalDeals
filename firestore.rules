rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Cities collection - read for all authenticated users, write for authenticated users
    match /cities/{cityId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Businesses collection - simplified for development
    match /businesses/{businessId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Offers collection - simplified for development
    match /offers/{offerId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Categories collection - read only for all authenticated users
    match /categories/{categoryId} {
      allow read: if request.auth != null;
    }
  }
}
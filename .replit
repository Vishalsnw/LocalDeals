modules = ["nodejs-23", "nodejs-18", "typescript-language-server"]
run = "npm run build"
[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run build"]

[workflows]
runButton = "Dev Server"

[[workflows.workflow]]
name = "Dev Server"
author = 43564906
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[ports]]
localPort = 5000
externalPort = 80
